{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stacklume",
  "version": "0.1.0",
  "identifier": "com.stacklume.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build:desktop",
    "frontendDist": "../dist-placeholder"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Stacklume",
        "width": 1280,
        "height": 820,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "center": true,
        "visible": false,
        "url": "about:blank"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "languages": [
          "Spanish"
        ],
        "startMenuFolder": "Stacklume",
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "headerImage": "nsis/header.bmp",
        "sidebarImage": "nsis/sidebar.bmp"
      }
    }
  }
}
